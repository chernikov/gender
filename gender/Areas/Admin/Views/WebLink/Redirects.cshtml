@model IEnumerable<gender.Model.WebLinkRecordRedirect>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Редиректы карточки</h3>
</div>
<div class="modal-body">
    <table class="table">
        <thead>
            <tr>
                <th>#
                </th>
                <th>Url
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr class="redirect-line">
                <td>
                    @(item.RecordRedirect.IsForum ? "форум" : "")
                </td>
                <td>
                    @item.RecordRedirect.Url
                </td>
                <td>
                    <a href="#" class="remove-redirect" data-id="@item.RecordRedirectID"><i class="icon-minus">
                    </i>Удалить</a>
                </td>
            </tr>
        }
    </table>
    <form class="form-horizontal" id="RedirectForm">
        @Html.Hidden("WebLinkID", null)
        <div class="control-group">
            <label class="control-label" for="RecordRedirect_Url">Url</label>
            <div class="controls">
                @Html.TextBox("RecordRedirect.Url", null)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="RecordRedirect_IsForum">Форум</label>
            <div class="controls">
                @Html.CheckBox("RecordRedirect.IsForum", false)
            </div>
        </div>
        <button type="submit" class="btn btn-primary" id="AddRedirect"><i class="icon-plus icon-white"></i>Добавить</button>
    </form>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Закрыть</button>
</div>


