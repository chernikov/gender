@model gender.Models.ViewModels.User.CreateAdminUserView
@{
    ViewBag.Title = "Создать пользователя";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header {
    <script type="text/javascript" src="/Scripts/admin/create-user.js"></script>
}
<h2>Создать пользователя</h2>
<p></p>
@using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        @Html.Hidden("ID", Model.ID)
        @Html.Hidden("Photo", Model.Photo)
        <div class="control-group">
            <label class="control-label" for="Email">
                Email
            </label>
            <div class="controls">
                @Html.ValidationMessage("Email")
                @Html.TextBox("Email", Model.Email)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="LastName">
                Фамилия <span class="required">*</span>
            </label>
            <div class="controls">
                @Html.ValidationMessage("LastName")
                @Html.TextBox("LastName", Model.LastName)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="FirstName">
                Имя <span class="required">*</span>
            </label>
            <div class="controls">
                @Html.ValidationMessage("FirstName")
                @Html.TextBox("FirstName", Model.FirstName)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Patronymic">
                Отчество
            </label>
            <div class="controls">
                @Html.ValidationMessage("Patronymic")
                @Html.TextBox("Patronymic", Model.Patronymic)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Category">
                Категория
            </label>
            <div class="controls">
                @Html.DropDownList("Category", Model.SelectListCategory)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="StartRating">
                Стартовый рейтинг
            </label>
            <div class="controls">
                @Html.ValidationMessage("StartRating")
                @Html.TextBox("StartRating", Model.StartRating)
            </div>
        </div>
         <div class="control-group">
            <label class="control-label" for="Invited">
                Приглашенный
            </label>
            <div class="controls">
                @Html.CheckBox("Invited", Model.Invited)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Фото</label>
            <div class="controls">
                @Html.ValidationMessage("Logo")
                <img src="@Model.Photo?width=100" alt="avatar" id="PreviewImage" class="@(string.IsNullOrEmpty(Model.Photo) ? "hidden" : "")"/>
                <br />
                <div class="btn btn-danger no-submit @(string.IsNullOrEmpty(Model.Photo) ? "hidden" : "")" id="DeleteImage" >
                    удалить
                </div>
                <div id="ChangeImage">
                    загрузить фотографию
                </div>
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Создать
            </button>
            @Html.ActionLink("Отмена", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}
