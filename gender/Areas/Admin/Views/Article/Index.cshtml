@model gender.Model.PageableData<gender.Model.Article>

@{
    ViewBag.Title = "Статьи в глоссарии";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header {
    <script type="text/javascript" src="/Scripts/admin/index-article.js"></script>
}
<h2>Статьи в глоссарии
</h2>
@Html.ActionLink("Добавить", "Create", "Article", null, new { @class = "btn" })
<table class="table">
    <thead>
        <tr>
            <th>#
            </th>
            <th>Наименование
            </th>
             <th>Url
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model.List)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Header
            </td>
            <td>
                @item.Url
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", "Article", new { id = item.ID }, new { @class = "btn" })
                @Html.ActionLink("Удалить", "Delete", "Article", new { id = item.ID }, new { @class = "btn btn-danger" })
                <a href="@Url.Action("Redirects", "Article", new { id = item.ID })" class="btn redirect" data-id="@item.ID"><i class="icon-resize-horizontal"></i></a>
            </td>
        </tr>
    }
</table>
<div class="pager">
    @Html.PageLinks(Model.PageNo, Model.CountPage, x => Url.Action(Model.Action, new { page = x }))
</div>
