@model gender.Model.PageableData<gender.Model.BlogPost>
@{
    var blog = (gender.Model.Blog)ViewBag.Blog;
    ViewBag.Title = "Блог " + blog.User.Person.FullName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header 
{
    <script type="text/javascript" src="/Scripts/admin/index-blogpost.js"></script>
}
<h2>
	Блог @blog.User.Person.FullName
</h2>
@Html.ActionLink("Добавить", "Create", "BlogPost", new { id = blog.ID }, new { @class = "btn" })
<table class="table">
	<thead>
		<tr>
			<th>
					#
			</th>
            <th>
                Заголовок
            </th>
            <th>
                Дата добавления
            </th>
			<th>
			</th>
		</tr>
	</thead>
	
	@foreach(var item in Model.List) 
    {
	<tr>
		<td> 
			@item.ID
		</td>
        <td>
            @item.Header
        </td>
        <td>
            @item.AddedDate
        </td>
		<td>
			@Html.ActionLink("Изменить", "Edit", "BlogPost", new { id = item.ID }, new { @class = "btn" })
            @Html.ActionLink("Удалить", "Delete", "BlogPost", new { id = item.ID }, new { @class = "btn btn-danger" })
            <a href="@Url.Action("Redirects", "BlogPost", new { id = item.ID })" class="btn redirect" data-id="@item.ID"><i class="icon-resize-horizontal"></i></a>
		</td>
	</tr>
	}
</table>
<div class="pager">
    @Html.PageLinks(Model.PageNo, Model.CountPage, x => Url.Action(Model.Action, new {page = x}))
</div>
