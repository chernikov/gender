@model IEnumerable<gender.Model.Subject>

@{
    ViewBag.Title = "Темы";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header
{
    <script type="text/javascript" src="~/Scripts/admin/subject-list.js"></script>
  
}
<h2>Темы</h2>

@Html.ActionLink("Добавить", "Create", "Subject", null, new { @class = "btn" })
<div class="subject-list subjectList">
    @foreach (var item in Model)
    {
        <div class="item subjectItem" data-id="@item.ID">
            @if (item.Subjects.Any())
            {
                <div class="open icon-plus-sign"></div>
            }
            else
            {
                <div class="non-open"></div>
            }
            <div class="title">
                @if (item.MainShow)
                {
                    <p>@item.Name</p>
                } else {
                    <p class="muted">@item.Name</p>
                }
            </div>
            <div class="actions">
                @Html.ActionLink("Добавить", "Create", "Subject", new { id = item.ID }, new { @class = "btn btn-mini" })
                @Html.ActionLink("Изменить", "Edit", "Subject", new { id = item.ID }, new { @class = "btn btn-mini" })
                @Html.ActionLink("Удалить", "Delete", "Subject", new { id = item.ID }, new { @class = "btn btn-mini btn-danger" })
            </div>
            <div class="sub-wrapper"></div>
        </div>
    }
</div>

