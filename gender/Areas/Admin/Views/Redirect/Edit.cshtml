@model gender.Models.ViewModels.RedirectView
@{
    ViewBag.Title = Model.ID == 0 ? "Добавить Редирект" : "Изменить Редирект";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>@(Model.ID == 0 ? "Добавить Редирект" : "Изменить Редирект")</h2>
<p></p>
@using (Html.BeginForm("Edit", "Redirect", FormMethod.Post, new { @class = "form-horizontal" }))
{
	<fieldset>
		@Html.Hidden("ID", Model.ID)

		<div class="control-group">
            <label class="control-label" for="OldLink">
                Старая ссылка
			</label>
            <div class="controls">
                @Html.ValidationMessage("OldLink")
				@Html.TextBox("OldLink", Model.OldLink)
            </div>
        </div>
		<div class="control-group">
            <label class="control-label" for="NewLink">
               Новая ссылка
			</label>
            <div class="controls">
                @Html.ValidationMessage("NewLink")
				@Html.TextBox("NewLink", Model.NewLink)
            </div>
        </div>
		<div class="control-group">
            <label class="control-label" for="IsForum">
                На форуме
			</label>
            <div class="controls">
				@Html.CheckBox("IsForum", Model.IsForum)
            </div>
        </div>
	   <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Сохранить
			</button>
            @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn" })
        </div>
	</fieldset>
}
