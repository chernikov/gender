@model IEnumerable<gender.Model.Publication>
@{
    int year = (int)ViewBag.Year;
    ViewBag.Title = year.ToString();
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h3 class="section-header"><i class="icon-book"></i>&nbsp;Публикации @year года</h3>
    <div class="row">
        <div class="span8">
            @if (Model.Any())
            {
                foreach (var current in Model)
                {
                @Html.Partial("PublicationShort", current)
                }
            }
        </div>
        <div class="span3">
            <div class="white-card">
                <h4>Публикации по годам</h4>
                @Html.Action("YearList", "Publication", new { selectedYear = year })
            </div>
        </div>
    </div>
</div>
