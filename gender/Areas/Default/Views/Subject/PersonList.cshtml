@model IEnumerable<gender.Model.Person>
@{
    var subject = (gender.Model.Subject)ViewBag.Subject;
}
@if (Model.Any())
{
    <h3 class="section-header"><i class="icon-user"></i>&nbsp;Люди</h3>
    <div class="white-card">
        <ul class="icons-gree">
            @foreach (var item in Model)
            {
                <li>
                    <i class="icon-user"></i>&nbsp;<a href="@Url.Action("Item", "Person", new { url = item.Url })">@item.FullName</a>
                </li>
            }
        </ul>
        <a href="@Url.Action("Item", "Subject", new { path = subject.FullUrl })#person">Еще</a>
    </div>
}